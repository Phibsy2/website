# Server Configuration
NODE_ENV=development
PORT=3001
HOST=localhost

# Database Configuration (PostgreSQL)
DATABASE_URL="postgresql://user:password@localhost:5432/dogwalking?schema=public"

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Geocoding API (für Adressauflösung)
GEOCODING_API_KEY=your-geocoding-api-key

# Email Configuration (für Benachrichtigungen)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=noreply@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=Dog Walking Platform <noreply@example.com>

# Logging
LOG_LEVEL=debug

# Algorithm Configuration
GROUP_WALK_MAX_RADIUS_KM=3
GROUP_WALK_TIME_WINDOW_MINUTES=60
